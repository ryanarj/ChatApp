<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C8234"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.ryanarjun.chatapp.ActivityEditProfile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/colorChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change User Color"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change User Name"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etEditUsername"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bsaveEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button1"
            android:text="Save"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="500dp" />



    </LinearLayout>

</LinearLayout>